<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/settingsPageColor"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="be470.upenn.edu.smartalarmclock.Settings">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="56dp"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <!--Logo-->
        <ImageView android:src="@drawable/logo"
            android:layout_width="wrap_content"
            android:layout_height="108dp"
            android:layout_marginBottom="36dp"
            android:layout_gravity="center_horizontal" />

        <!--Settings Welcome Text-->
        <TextView android:id="@+id/settingsWelcome"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="10dp"
            android:text="Bluetooth Settings!"
            android:gravity="center"
            android:textSize="16dip"/>

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progress_bar"
            style="@android:style/Widget.ProgressBar.Small"
            android:layout_marginRight="5dp" />


        <!--Bluetooth 1  Button-->
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/bt1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:visibility="invisible"
            android:padding="12dp"
            android:text="Pair with your nearby CARDIALAM !"
            android:onClick="callPair"/>

        <!--Bluetooth 1  Button-->
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/gohome"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:padding="12dp"
            android:text="Go back home"
            android:onClick="goHome"/>

    </LinearLayout>

</RelativeLayout>
